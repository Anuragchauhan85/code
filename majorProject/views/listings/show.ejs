<% layout("/layouts/boilerplate") %>
<body>
  <h3>Listing details</h3>
  <img
    src="<%= (listing.image && listing.image.url) || listing.image %>"
    alt="listing image"
    style="max-width: 400px; display: block; margin-bottom: 12px"
  />
  <ul>
    <li><%= listing.title %></li>
    <li><%= listing.description %></li>
    <li>
      &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : 'N/A'
      %>
    </li>
    <li><%= listing.location %></li>
    <li><%= listing.country %></li>
  </ul>
  <br />
  <a href="/listings/<%= listing._id %>/edit">Edit this listing</a>
  <br /><br />
  <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
    <button>Delete this listing</button>
  </form>
</body>

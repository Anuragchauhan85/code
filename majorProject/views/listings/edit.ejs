<% layout("/layouts/boilerplate") %>
  <body>
    <h3>Edit your listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
      <input name="listing[title]" value="<%= listing.title %>" type="text" />
      <br />
      <input
        name="listing[description]"
        value="<%= listing.description %> "
        type="text"
      />
      <br />
      <input
        name="listing[image]"
        value="<%= (listing.image && listing.image.url) || listing.image || '' %>"
        type="text"
      />
      <br />
      <input name="listing[price]" value="<%= listing.price %>" type="number" />
      <br />
      <input
        name="listing[location]"
        value="<%= listing.location %>"
        type="text"
      />
      <br />
      <input
        name="listing[country]"
        value="<%= listing.country %>"
        type="text"
      />
      <br />
      <button>Edit</button>
    </form>
  </body>

